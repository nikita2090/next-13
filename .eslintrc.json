{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "es2017": true,
    "es2020": true,
    "es2021": true,
    "es2022": true
  },
  "globals": {
    "window": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "curly": 2,
    "react/prop-types": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/label-has-associated-control": 2,
    "prettier/prettier": 0,
    "jsx-a11y/no-autofocus": 1,
    "@typescript-eslint/no-explicit-any": 0
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "tsconfigRootDir": "."
  }
}
